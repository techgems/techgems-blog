---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import HomeFooter from '../../components/HomeFooter.astro';

const placeholderHeroImage1 = '/blog-placeholder-1.jpg';
const placeholderHeroImage2 = '/blog-placeholder-2.jpg';
const placeholderHeroImage3 = '/blog-placeholder-3.jpg';
const placeholderHeroImage4 = '/blog-placeholder-4.jpg';


const posts = (await getCollection('blog', ({ data }) => {
	return data.published === true;
})).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="my-8">
			<section class="mx-auto mt-8 mb-20 max-w-7xl px-4 sm:px-6 lg:px-8">
				<ul class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8 list-none m-0 p-0">
					{
						posts.map((post, index) => {
							
							let finalHeroImage = "";

							if(post.data.usePlaceholderHeroInList) {
								const placeholderHeroImages = [
									placeholderHeroImage1,
									placeholderHeroImage2,
									placeholderHeroImage3,
									placeholderHeroImage4,
								];
								const randomIndex = Math.floor(Math.random() * 4);
								finalHeroImage = placeholderHeroImages[randomIndex];
							}
							else {
								finalHeroImage = post.data.heroImage!;
							}

							return (
								<li class={index === 0 ? "md:col-span-2 text-center" : ""}>
									
									<a href={`/blog/${post.slug}/`}>
										<img width={720} height={360} src={finalHeroImage} alt="" class="w-full mb-2 rounded-xl" />
										<h4 class={`title ${index === 0 ? 'text-2xl sm:text-4xl' : 'text-xl sm:text-2xl'}`}>{post.data.title}</h4>
										<p class="date">
											<FormattedDate date={post.data.date} />
										</p>
									</a>
								</li>
							);
						})
					}
				</ul>
			</section>
		</main>
		<HomeFooter />
	</body>
</html>
