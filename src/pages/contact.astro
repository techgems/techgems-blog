---
import Layout from "../layouts/BaseLayout.astro";

import { library, icon } from "@fortawesome/fontawesome-svg-core";
import {
  faGithubSquare,
  faSquareLinkedin,
} from "@fortawesome/free-brands-svg-icons";

library.add(faGithubSquare, faSquareLinkedin);

const linkedInIcon = icon(faSquareLinkedin);
const githubIcon = icon(faGithubSquare);
---

<Layout
  title="Contact Carlos"
  description="Get in touch with Carlos for your web development needs"
>
  <section class="max-w-3xl mx-auto my-16 px-4 sm:px-6 lg:px-8">
    <div class="prose">
      <h3 class="text-cyan-700 text-6xl">Get in touch</h3>
      <p>
        Whether you have a question, a project idea, or just want to say hello,
        feel free to reach out!
      </p>
      <form action="https://api.web3forms.com/submit" method="POST" class="mx-auto mt-16 max-w-xl sm:mt-2">
        <input
          type="hidden"
          name="access_key"
          value="497918da-fe85-4207-b08d-9827ee76e82d"
        />
        <div>
          <div class="my-4">
            <label for="name" class="block text-sm/6 font-semibold text-gray-900">Name</label>
            <div class="mt-2.5">
              <input id="name" type="text" name="name" autocomplete="given-name" required class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-cyan-600" />
            </div>
          </div>
          <div class="my-4">
            <label for="email" class="block text-sm/6 font-semibold text-gray-900">Email</label>
            <div class="mt-2.5">
              <input id="email" type="email" name="email" autocomplete="email" required class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-cyan-600" />
            </div>
          </div>
          <div class="my-4">
            <label for="message" class="block text-sm/6 font-semibold text-gray-900">Message</label>
            <div class="mt-2.5">
              <textarea id="message" name="message" rows="4" required class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-cyan-600"></textarea>
            </div>
          </div>
        </div>
        <div class="mt-8">
          <input class="block w-full rounded-md bg-cyan-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-xs hover:bg-cyan-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cyan-700" type="submit" value="Let's talk" />
        </div>
      </form>
    </div>

    <div class="mt-16 prose">
      <h3 class="text-cyan-700 text-4xl">Other Ways to Connect</h3>
      <div class="flex gap-4">
        <a
          class="text-black mx-2 w-28 p-3 block"
          href="https://github.com/techgems"
          target="_blank"
          rel="noopener"
        >
          <Fragment set:html={githubIcon.html} />
        </a>
        <a
          class="text-cyan-500 mx-2 w-28 p-3 block"
          href="https://www.linkedin.com/in/carlos-jimenez-7b4a4a1a/"
          target="_blank"
          rel="noopener"
        >
          <Fragment set:html={linkedInIcon.html} />
        </a>
      </div>
    </div>
  </section>
</Layout>
